# hhtp://editorconfig.org
root = true

[*]
indent_style = space
indent:size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# The JSON files cintain newlines inconsistently
[*.json]
insert_final_newline = ignore

# Minified JS files shouldn't be changed
[**.min.js]
indent_size = ignore
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false